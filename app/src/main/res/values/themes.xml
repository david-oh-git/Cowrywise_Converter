<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CowrywiseConverter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="TitleTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textColor">@color/app_blue</item>
    </style>

    <style name="currencyInputStyle">
        <item name="android:textSize">@dimen/dimen_edittxt_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/faded_text_colour</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CircleImageView" parent="" >

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
